---
import { Picture } from 'astro:assets'
import logo from '@assets/logo.png'
---

<style>
	header {
		background-color: var(--color-primary);
		border: 0.25em solid var(--color-tertiary);
		border-radius: 3em;
		padding-inline: 1em;
		margin-bottom: 1em;
	}

	.logo {
		--offset: 1em;
		--scale-small: scale(0.99);
		--scale-large: scale(1);
		--translate: translateY(-0.1em);
		margin-block-start: var(--offset);
		margin-block-end: calc(var(--offset) * -1);
		animation: infinite 8s breathing;
	}

	@keyframes breathing {
		0% {
			transform: var(--scale-small);
		}
		70% {
			transform: var(--scale-large) var(--translate);
		}
		75% {
			transform: var(--scale-large) var(--translate);
		}
		100% {
			transform: var(--scale-small);
		}
	}
</style>

<header class='client-header'>
	<Picture class='logo' src={logo} alt='Feature Creep' />
</header>
