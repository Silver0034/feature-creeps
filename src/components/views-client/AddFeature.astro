---
export const sortOrder = 4
const waitingMessage = 'Waiting for friends to join?'
const buttonText = 'Save feature'

import { Icon } from 'astro-icon/components'
import Button from '@components/Button.astro'
import Input from '@components/Input.astro'
import PlayerFeatures from '@components/PlayerFeatures.astro'
---

<Input
	disabled
	id='add-feature-player-name'
	multiline
	name='playerName'
	preventLineBreaks
	shapes={['flag-left', 'flag-right']}
	value='{A name, that is <=50 characters long, goes here.}'
/>

<PlayerFeatures />

<Input
	id='add-feature-input'
	label='Write a new feature for your Creep! It can be a great power, or a terrible flaw, but make sure it is unique.'
	multiline
	name='feature'
	maxlength='200'
/>

<Button id='startGame' text={buttonText} />

<script>
	// TODO - Make the button start the game
	const startGameButton = document.getElementById(
		'startGame'
	) as HTMLButtonElement

	startGameButton.addEventListener('click', () => {
		console.log('Starting the game...')
	})
</script>
