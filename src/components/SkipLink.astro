---
const { id, text } = Astro.props
---

<style>
	a {
		position: absolute;
		top: -9999px;
		left: -9999px;
		height: 1px;
		width: 1px;
		overflow: hidden;

		&:focus {
			position: fixed;
			top: 0;
			left: 0;
			padding: 1rem;
			background-color: white;
			z-index: 1000;
		}
	}
</style>

<a href={`#${id}`}>{text}</a>
