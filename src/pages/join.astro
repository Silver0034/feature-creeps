---

<script>
  import { main } from "@utilities/game-logic-client";
  await main();
</script>

<p>Client</p>
<p>Game State: <span id="gameState"></span></p>
<p id="name"></p>
<p id="feedback" aria-live="assertive"></p>

<div id="roomDiv" style="display:none;">
  <br />
  <label for="roomId">Room Code:</label>
  <input type="text" id="roomId" size="10" />
  <button id="submitRoomId">Submit</button>
</div>

<div id="nameDiv" style="display:none;">
  <br />
  <label for="nameInput">Name:</label>
  <input type="text" id="nameInput" size="20" />
  <button id="submitName">Submit</button>
  <br />
  <br />
  <button id="optionsButton">Options</button>
</div>

<div id="connectDiv" style="display:none;">
  <br />
  <button id="startGame" class="vip">Start Game</button>
</div>

<div id="introDiv" style="display:none;">
  <br />
  <button id="skipInto" class="vip">Skip Intro</button>
</div>

<div id="abilityDiv" style="display:none;">
  <br />
  <label for="abilityInput">Ability:</label>
  <input type="text" id="abilityInput" size="20" />
  <button id="submitAbility">Submit</button>
  <button id="submitAbilityFallback">I'm Feeling Lucky</button>
</div>

<div id="optionsDiv" style="display:none;">
  <br />
  <p>Options Menu:</p>
  <label>
    <input type="checkbox" id="soundEffects" />
    Play sound on prompt
  </label>
  <button id="testSoundEffects">Test Sound</button>
  <br />
  <label>
    <input type="checkbox" id="vibrate" />
    Vibrate on prompt (only works for Chromium-based browsers)
  </label>
  <button id="testVibrate">Test Vibrate</button>
  <br />
  <button id="saveConfig">Save</button>
</div>

<br />
<p id="sheet"></p>
<div id="messages"></div>
